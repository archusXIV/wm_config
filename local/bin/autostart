#!/usr/bin/env bash

# Screen
# Change the screen resolution according to your monitor settings.
xrandr -s 1920x1080 &
[[ -f $HOME/.fehbg ]] && sh -c "$HOME"/.fehbg &

# Sound
DEFAULT_SINK=$(pactl get-default-sink)
pactl set-sink-volume "${DEFAULT_SINK}" 50%

# first run
[[ -f $HOME/clon_wm ]] && rm "$HOME"/clon_wm
geany ~/README.md &

# Other settings
